{
  "name": "zatca-server",
  "version": "1.0.0",
  "description": "Contains a server for zatca functions",
  "author": "ahmed nassar",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf ./node_modules",
    "clean-locks": "rm -rf ./yarn.lock",
    "bootstrap": "lerna bootstrap",
    "reset": "yarn clean && yarn clean-locks && yarn bootstrap",
    "prepare": "yarn workspace @zatca-server/start-zatca-server start",
    "start": "yarn workspace @zatca-server/server start",
    "start-dev": "yarn start --sandbox=developer",
    "start-sim": "yarn start --sandbox=simulation",
    "exsys-dev": "yarn start --send-initial-invoices --client=exsys --sandbox=developer --use-logger",
    "exsys-sim": "yarn start --send-initial-invoices --client=exsys --sandbox=simulation --use-logger",
    "fyha-dev": "yarn start --send-initial-invoices --client=fyha --sandbox=developer --use-logger",
    "fyha-sim": "yarn start --send-initial-invoices --client=fyha --sandbox=simulation --use-logger",
    "dev-qr": "yarn start --use-invoice-qr-api --use-logger",
    "prod": "yarn start --production"
  },
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "@zatca-server/helpers": "1.0.0",
    "@zatca-server/server": "1.0.0",
    "@zatca-server/start-zatca-server": "1.0.0",
    "axios": "^1.4.0",
    "body-parser": "^1.20.0",
    "chalk": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "fast-xml-parser": "^4.3.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "xml2js": "^0.6.2",
    "xmldom": "^0.6.0",
    "xmldsigjs": "^2.5.1"
  },
  "engines": {
    "node": ">= 16.5.0",
    "yarn": ">= 1.22.15",
    "npm": ">= 7.19.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "xml-crypto": "^4.1.0"
  }
}
